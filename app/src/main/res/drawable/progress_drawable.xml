<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress_not_ready">
        <shape>
            <solid
                android:color="#FF0000" />
        </shape>
    </item>

    <item
        android:id="@+id/progress">
        <clip>
            <shape>
                <solid
                    android:color="@color/accent" />
            </shape>
        </clip>
    </item>

</layer-list>