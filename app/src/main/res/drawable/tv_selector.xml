<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:drawable="@color/primary_dark" /> <!-- pressed -->
    <item android:state_activated="true"
        android:drawable="@color/primary_dark" /> <!-- activated -->
    <item android:state_focused="true"
        android:drawable="@color/primary_dark" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@color/primary_dark" /> <!-- hovered -->
    <item android:drawable="@android:color/transparent" /> <!-- default -->

</selector>